{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",      // atau bisa juga "react-jsx" untuk expo-router
    "lib": ["dom", "esnext"],   // agar JSX.Element dikenali
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true
  }
}
